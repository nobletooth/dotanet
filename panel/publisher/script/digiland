 <script>
                document.addEventListener('DOMContentLoaded', function() {
                    fetch('https://example.com/api/getAdData')
                        .then(response => response.json())
                        .then(data => {
                            const adContainer = document.getElementById('ad-container');
                            const adImage = document.createElement('img');
                            adImage.src = data.imageUrl;
                            adImage.alt = data.altText;
                            adImage.onclick = function() {
                                // API call when ad is clicked
                                fetch('https://example.com/api/adClicked', { method: 'POST' });
                                window.location.href = data.url;
                            };
                            adContainer.appendChild(adImage);

                            fetch('https://example.com/api/adSeen', { method: 'POST' });
                        })
                        .catch(error => console.error('Error fetching ad data:', error));
                });
            </script>